<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oceansfive.footymanager.EnterScore">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 1"
                    android:id="@+id/home_team_name"
                    android:textColor="#000000"
                    android:textSize="70px" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/home_team"
                    android:src="@drawable/default_logo"
                    android:layout_gravity="center"
                    android:background="#505050" />

            </LinearLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/home_score"
                android:layout_gravity="center"
                android:enabled="true"
                android:text="0"
                android:textColor="#000000"
                android:textSize="70px"
                android:paddingLeft="20px"
                android:paddingRight="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/dash"
                android:textSize="150px"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:paddingRight="20px"
                android:paddingLeft="20px" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/away_score"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="70px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:enabled="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="team 2"
                    android:id="@+id/away_team"
                    android:textColor="#000000"
                    android:textSize="70px"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/away_team_logo"
                    android:layout_gravity="center"
                    android:src="@drawable/default_logo"
                    android:background="#505050" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellow Cards"
                android:id="@+id/yellow_cards"
                android:textColor="#000000"
                android:textSize="70px"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/home_yellow"
                android:textSize="70px"
                android:textColor="#000000"
                android:text="0"
                android:layout_marginLeft="200px" />

            <Space
                android:layout_width="600px"
                android:layout_height="20px" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/away_yellow"
                android:text="0"
                android:textColor="#000000"
                android:textSize="70px" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red Cards"
                android:id="@+id/red_cards"
                android:textColor="#000000"
                android:textSize="70px"
                android:paddingTop="100px" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/home_red"
                android:layout_marginLeft="200px"
                android:text="0"
                android:textColor="#000000"
                android:textSize="70px" />

            <Space
                android:layout_width="600px"
                android:layout_height="20px" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/away_red"
                android:text="0"
                android:textColor="#000000"
                android:textSize="70px" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/submit"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/checkmark" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
