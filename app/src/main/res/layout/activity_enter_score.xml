<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oceansfive.footymanager.EnterScore">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="top|left"
                android:layout_gravity="top|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 1"
                    android:id="@+id/teamOne"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:layout_gravity="top"
                    android:layout_above="@+id/home_team"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/home_team"
                    android:src="#9d9d9d"
                    android:background="#505050"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="141dp"
                android:layout_height="105dp"
                android:gravity="center"
                android:layout_weight="0.93">

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="2"
                    android:id="@+id/home_score"
                    android:enabled="true"
                    android:textColor="#000000"
                    android:textSize="45dp"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:gravity="bottom|center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/dash"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="0" />

                <TextView
                    android:layout_width="37dp"
                    android:layout_height="50dp"
                    android:text="-"
                    android:id="@+id/dash"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:paddingRight="6dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:password="false"
                    android:layout_alignParentTop="true"
                    android:paddingTop="25dp" />

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="2"
                    android:id="@+id/away_score"
                    android:layout_gravity="center"
                    android:enabled="true"
                    android:textColor="#000000"
                    android:textSize="45dp"
                    android:gravity="bottom|center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/dash"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:hint="0" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="top|right"
                android:layout_gravity="top|center_vertical|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 2"
                    android:id="@+id/teamTwo"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:layout_gravity="top|center_horizontal|right"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/away_team_logo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/away_team_logo"
                    android:layout_gravity="center"
                    android:src="#9d9d9d"
                    android:background="#505050"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellow Cards"
                android:id="@+id/yellow_cards"
                android:textColor="#000000"
                android:textSize="35px"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/home_yellow"
                android:textSize="45dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:hint="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:textSize="45dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/away_yellow"
                android:textColor="#000000"
                android:textSize="45dp"
                android:hint="0" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red Cards"
                android:id="@+id/textView4"
                android:textColor="#000000"
                android:textSize="35px"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/home_red"
                android:textSize="45dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:hint="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-"
                android:id="@+id/textView5"
                android:layout_gravity="center_vertical"
                android:textSize="45dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/away_red"
                android:textColor="#000000"
                android:textSize="45dp"
                android:hint="0" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/submit"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/checkmark"
                android:onClick="checkTie" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
