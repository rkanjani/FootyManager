<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oceansfive.footymanager.EnterScore">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="124dp"
                android:layout_height="fill_parent"
                android:gravity="top|left"
                android:layout_gravity="top|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Canada"
                    android:id="@+id/home_team_name"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_gravity="top" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/home_team"
                    android:src="@drawable/logo4"
                    android:layout_gravity="left" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="2"
                    android:id="@+id/home_score"
                    android:layout_gravity="center"
                    android:enabled="true"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="45dp"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:gravity="top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:id="@+id/dash"
                    android:textSize="50px"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:paddingRight="20px"
                    android:paddingLeft="20px"
                    android:gravity="top" />

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="2"
                    android:id="@+id/away_score"
                    android:layout_gravity="center"
                    android:enabled="true"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="45dp"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:gravity="top" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="top|right"
                android:layout_gravity="top|center_vertical|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barcelona"
                    android:id="@+id/away_team"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_gravity="top|center_horizontal|right" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/away_team_logo"
                    android:layout_gravity="bottom|center|right"
                    android:src="@drawable/logo1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellow Cards"
                android:id="@+id/yellow_cards"
                android:textColor="#000000"
                android:textSize="35px"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/home_yellow"
                android:textSize="45dp"
                android:textColor="#000000"
                android:text="0"
                android:layout_gravity="center"
                android:gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:textSize="45dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/away_yellow"
                android:text="0"
                android:textColor="#000000"
                android:textSize="45dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red Cards"
                android:id="@+id/textView4"
                android:textColor="#000000"
                android:textSize="35px"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/home_red"
                android:textSize="45dp"
                android:textColor="#000000"
                android:text="0"
                android:layout_gravity="center"
                android:gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-"
                android:id="@+id/textView5"
                android:layout_gravity="center_vertical"
                android:textSize="45dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:ems="2"
                android:id="@+id/away_red"
                android:text="0"
                android:textColor="#000000"
                android:textSize="45dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/submit"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/checkmark" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
