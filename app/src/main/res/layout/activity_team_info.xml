<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oceansfive.footymanager.TeamInfo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingBottom="20px">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/teamLogo"
                android:src="#9d9d9d"
                android:background="#505050" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/teamName"
                android:textSize="30dp"
                android:gravity="center|center_horizontal"
                android:text="Real Madrid"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/teamLogo"
                android:layout_toEndOf="@+id/teamLogo"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="50px"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Goals:"
                android:id="@+id/textView8"
                android:textSize="70px"
                android:textColor="#000000" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/totalGoals"
                android:textColor="#000000"
                android:textSize="70px"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="50px"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wins:"
                android:id="@+id/teamWin"
                android:textSize="70px"
                android:textColor="#000000" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/numOfWin"
                android:textColor="#000000"
                android:textSize="70px"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="50px"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Losses: "
                android:id="@+id/teamLoss"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="70px" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/numOfLoss"
                android:textColor="#000000"
                android:textSize="70px"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cards: "
                android:id="@+id/cards"
                android:textSize="70px"
                android:textColor="#000000"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/numOfRed"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="70px"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/numOfYellow"
                android:layout_toLeftOf="@+id/numOfYellow"
                android:gravity="center_horizontal"
                android:background="#fbbaba" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/numOfYellow"
                android:textSize="70px"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal"
                android:background="#fff89c" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>