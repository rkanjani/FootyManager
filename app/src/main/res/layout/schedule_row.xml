<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/relativeLayout">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout4"
            android:background="#030303"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/team1"
                android:layout_gravity="center"
                android:background="#9d9d9d"
                android:layout_margin="2dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout5"
            android:background="#030303"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/team2"
                android:background="#9d9d9d"
                android:layout_margin="2dp"
                android:layout_weight="0.35"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout6"
            android:background="#030303"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/teamWin"
                android:layout_gravity="center"
                android:background="#9d9d9d"
                android:layout_margin="2dp" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:weightSum="1"
            android:id="@+id/hlayout"
            android:layout_toLeftOf="@+id/frameLayout6"
            android:layout_toRightOf="@+id/frameLayout4"
            android:layout_toEndOf="@+id/frameLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="VS"
                android:id="@+id/versus"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/frameLayout4"
                android:layout_toEndOf="@+id/frameLayout4"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"
                android:layout_weight="0.07" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Winner"
                android:id="@+id/winner"
                android:layout_alignTop="@+id/versus"
                android:layout_toRightOf="@+id/frameLayout5"
                android:gravity="fill_horizontal|center_vertical|center_horizontal" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>