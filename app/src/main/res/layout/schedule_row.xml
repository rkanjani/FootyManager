<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:touchscreenBlocksFocus="false">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/frameLayout4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/teamLogoOne"
                android:layout_gravity="center"
                android:src="#b2b2b2" />
        </FrameLayout>

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/winnerTwo"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/frameLayout5"
            android:layout_toStartOf="@+id/frameLayout5"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/teamNameOne"
            android:layout_alignParentTop="true"
            android:text="team one"
            android:layout_toLeftOf="@+id/dash"
            android:layout_toRightOf="@+id/frameLayout4"
            android:layout_toEndOf="@+id/frameLayout4"
            android:gravity="left"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/winnerOne"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_alignTop="@+id/winnerTwo"
            android:layout_toRightOf="@+id/frameLayout4"
            android:layout_toEndOf="@+id/frameLayout4"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/scoreOne"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_alignTop="@+id/scoreTwo"
            android:layout_toLeftOf="@+id/dash"
            android:layout_toStartOf="@+id/dash" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/scoreTwo"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignBottom="@+id/dash"
            android:layout_toRightOf="@+id/gameNum"
            android:layout_toEndOf="@+id/gameNum" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/frameLayout4"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:id="@+id/frameLayout5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/teamLogoTwo"
                android:layout_gravity="left|center_vertical"
                android:src="#b2b2b2" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-"
            android:id="@+id/dash"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/teamNameTwo"
            android:text="team two"
            android:gravity="right"
            android:paddingRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/frameLayout5"
            android:layout_toStartOf="@+id/frameLayout5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="#4"
            android:id="@+id/gameNum"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>