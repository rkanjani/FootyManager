<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oceansfive.footymanager"
    android:versionCode="2"
    android:versionName="1.1">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TournamentCreation" />
        <activity
            android:name=".EditTournament"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity android:name=".TeamInfo" />
        <activity android:name=".Ranking" />
        <activity android:name=".EnterScore" />
        <activity android:name=".SelectLogo" />
        <activity android:name=".Schedule" />
        <activity android:name=".Slideshow" />
        <activity android:name=".winner" />
    </application>

</manifest>
